
<div class="container  mt-5 d-flex flex-row justify-content-around">
    {{#each notes}}
    <div class="row ">
        <div class="col-md-3  text-center ">
            <div class="card" style="width: 18rem;">
                <div class="card-title pt-3 d-flex justify-content-between px-3">
                    <h4>{{title}}</h4><a href="/notes/edit/{{_id}}"><i class="bi bi-pencil"></i></a>
                </div>
                <div class="card-body">
                    <p class="lead py-2">
                    {{description}}
                    </p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">

                        <button class="btn btn-danger shadow px-4" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>    
    </div>
    {{else}}
     <div class="row ">
        <div class="col-md-3  text-center ">
            <div class="card" style="width: 18rem;">
                <div class="card-title pt-3 mx-auto px-3">
                    <p class="lead">There are no notes</p>
                </div>
                <div class="card-body">
                    <a href="/notes/add"><button class="btn btn-success shadow px-4" type="submit">Create Note</button></a>
                </div>
            </div>
        </div>    
    </div>

    {{/each}}

</div>


   


