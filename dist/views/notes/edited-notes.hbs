<div class="container">
    <div class="col-md-4 mx-auto mt-5">
      <div class="card border" >
        <div class="card-header">
          <h5 class="card-title text-center">Edit Note</h5>
        <div class="card-body">
          <form action="/notes/edited-notes/{{enote._id}}?_method=PUT" method="POST">
          <!--necesario para usar el metodo put-->
          <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
              <label for="title" class="form-label" ></label>
              <input type="text" name="title" class="form-control" id="title" placeholder="Title" value="{{enote.title}}">
            </div>
            <div class="form-group">
               <label for="description" class="form-label"></label>
              <textarea name='description' class="form-control" id="description">{{enote.description}}</textarea>
            </div>
            <div class="form-group d-grid">
            <button type="submit" class="btn btn-primary btn-block mt-5 ">Save</button>
            </div>
          </form>
        </div>
     </div>
    </div>
  </div>
</div>