
<!--comprobacion con handlebars-->

{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}

<div class="container">
    <div class="col-md-4 mx-auto mt-5">
      <div class="card border" >
        <div class="card-header">
          <h5 class="card-title text-center">New Note</h5>
        <div class="card-body">
          <form action="/notes/newnote" method='POST'>
            <div class="form-group">
              <label for="title" class="form-label" ></label>
              <input type="text" name="title" class="form-control" id="title" placeholder="Title" autofocus>
            </div>
            <div class="form-group">
               <label for="description" class="form-label"></label>
              <input type="text" name='description' class="form-control" id="description" placeholder="Description">
            </div>
            <div class="form-group d-grid">
            <button type="submit" class="btn btn-primary btn-block mt-5 ">Save</button>
            </div>
          </form>
        </div>
     </div>
    </div>
  </div>
</div>
